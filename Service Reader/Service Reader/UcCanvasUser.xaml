<UserControl x:Class="Service_Reader.UcCanvasUser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Service_Reader"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="300">
    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Username" Grid.Column="0" Grid.Row="0" Margin="5"/>
        <TextBox Name="txtUsername" Grid.Column="1" Grid.Row="0" Margin="5" Text="{Binding Path=userName}"/>
        <Label Content="Password" Grid.Column="2" Grid.Row="0" Margin="5"/>
        <TextBox Name="txtPassword" Grid.Column="3" Grid.Row="0" Margin="5" Text="{Binding Path=password}"/>
    </Grid>
</UserControl>
